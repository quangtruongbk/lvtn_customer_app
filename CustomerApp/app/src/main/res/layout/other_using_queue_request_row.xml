<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/queueRequestLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:layout_marginBottom="2dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:background="#ffffff"
    android:weightSum="1"
    >


    <LinearLayout
        android:id="@+id/infoLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Tên khách hàng"
            android:textColor="@color/colorOrange"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phoneTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTxt"
            android:text="Số điện thoại:"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/emailTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phoneTxt"
            android:text="Email:"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/queueNameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phoneTxt"
            android:text="Tên hàng đợi:"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/branchNameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phoneTxt"
            android:text="Cơ sở:"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/createTimeTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phoneTxt"
            android:text="Thời gian đăng ký:"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/startTimeTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phoneTxt"
            android:text="Thời gian bắt đầu:"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/QRCodeImg"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_below="@+id/statusTxt"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />
    </LinearLayout>
</LinearLayout>
