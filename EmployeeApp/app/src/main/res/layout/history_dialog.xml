<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id = "@+id/historyRelativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorTitleBar"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lịch sử"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
    <TextView
        android:id="@+id/nameTxt"
        android:textSize="16dp"
        android:text="Tên khách hàng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/emailTxt"
        android:textSize="16dp"
        android:text="Email:"
        android:layout_below="@+id/nameTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/phoneTxt"
        android:textSize="16dp"
        android:text="Số điện thoại:"
        android:layout_below="@+id/emailTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/timeTxt"
        android:textSize="16dp"
        android:text="Thời gian đăng ký:"
        android:layout_below="@+id/phoneTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/branchNameTxt"
        android:textSize="16dp"
        android:text="Cơ sở:"
        android:layout_below="@+id/timeTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/queueNameTxt"
        android:textSize="16dp"
        android:text="Hàng đợi:"
        android:layout_below="@+id/branchNameTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/statusTxt"
        android:textSize="16dp"
        android:text="Tình trạng:"
        android:layout_below="@+id/queueNameTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/startTimeTxt"
        android:textSize="16dp"
        android:text="Thời gian vào:"
        android:layout_below="@+id/statusTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/endTimeTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startTimeTxt"
        android:text="Thời gian xong:"
        android:textSize="16dp"
        />

        <TextView
            android:id="@+id/waitingScoreTxt"
            android:textSize="16dp"
            android:text="Điểm chờ đợi:"
            android:layout_below="@+id/endTimeTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/serviceScoreTxt"
            android:textSize="16dp"
            android:text="Điểm phục vụ:"
            android:layout_below="@+id/waitingScoreTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/spaceScoreTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/serviceScoreTxt"
            android:text="Điểm không gian:"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/commentTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/serviceScoreTxt"
            android:text="Nhân xét:"
            android:textSize="16dp"
            />

    <Button
        android:id="@+id/ratingBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/endTimeTxt"
        android:layout_marginTop="5dp"
        android:background="@color/colorLightOrange"
        android:text="Đánh giá"
        android:visibility="gone"
        android:textColor="@color/colorWhite"/>
    </LinearLayout>
</LinearLayout>
